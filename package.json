{
  "name": "saucedemo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "copy:history": "xcopy allure-report\\history allure-results\\history",
    "generate:reports":"npm run copy:history && npx allure generate ./allure-results --clean",
    "open:report": "npx allure open ./allure-report",
    "execute:scrpit": "npx playwright test",
    "posttest": "npm run generate:reports && npm run open:report",
    "chromium": "npx playwright test ./tests/Cart/TC_005.spec.ts --project=chromium",
    "firefox": "npx playwright test ./tests/alertHandling.spec.ts --project=firefox",
    "webkit": "npx playwright test ./tests/Cart/TC_005.spec.ts --project=webkit",
    "test:chromium": "npm run pretest && npm run chromium && npm run posttest|| npm run posttest",
    "test:firefox": "npm run pretest && npm run firefox && npm run posttest|| npm run posttest",
    "test:webkit": "npm run pretest && npm run webkit && npm run posttest|| npm run posttest",
    "test": "npm run execute:scrpit || npm run posttest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@playwright/test": "^1.44.0",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "allure-commandline": "^2.24.0",
    "allure-playwright": "^2.8.1",
    "csv-parse": "^5.5.6",
    "eslint": "^9.9.1",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "mkdirp": "^3.0.1",
    "rimraf": "^6.0.1"
  }
}
